# Arketic Enterprise Environment Configuration

# Application Environment
NODE_ENV=production
ENVIRONMENT=production

# Database Configuration
POSTGRES_DB=arketic_prod
POSTGRES_USER=arketic
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://arketic:your_secure_password_here@postgres:5432/arketic_prod

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=redis_prod_password

# API Configuration
HOST=0.0.0.0
PORT=8000
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
CORS_ORIGINS=https://arketic.com,https://www.arketic.com

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://arketic.com/api
NEXT_PUBLIC_APP_ENV=production

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Vector Databases
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
WEAVIATE_URL=your_weaviate_url_here
WEAVIATE_API_KEY=your_weaviate_api_key_here

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password_here
PROMETHEUS_RETENTION_DAYS=30

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/arketic.crt
SSL_KEY_PATH=/etc/nginx/ssl/arketic.key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=arketic-backups
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=noreply@arketic.com

# Security
RATE_LIMIT_REQUESTS_PER_MINUTE=60
MAX_UPLOAD_SIZE_MB=50
SESSION_TIMEOUT_MINUTES=60

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_DOCUMENT_PROCESSING=true
ENABLE_VECTOR_SEARCH=true
ENABLE_MONITORING=true
ENABLE_BACKUPS=true